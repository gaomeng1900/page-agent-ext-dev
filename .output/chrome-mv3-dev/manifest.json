{
  "manifest_version": 3,
  "name": "page-agent-ext-dev",
  "description": "",
  "version": "1.0.0",
  "web_accessible_resources": [
    {
      "resources": [
        "main-world.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Page Agent Extension",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  },
  "permissions": [
    "tabs",
    "scripting"
  ]
}